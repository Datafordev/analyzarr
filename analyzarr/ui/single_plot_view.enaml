from enaml.widgets.api import Window, Container, EnableCanvas, PushButton, \
    GroupBox
from single_plot import SinglePlot

enamldef SinglePlotView(Window):
    attr model
    initial_size = (500,550)
    Container:
        EnableCanvas:
            component = model.plot


