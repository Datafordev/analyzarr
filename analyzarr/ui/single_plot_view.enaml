enamldef StackPlotView(SinglePlotView):
    Container:
        EnableCanvas:
            component = model.plot
        GroupBox:
            PushButton:
                text = ">"
                clicked :: model.increase_img_idx()
            PushButton:
                text = "<"
                clicked :: model.decrease_img_idx()
